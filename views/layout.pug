doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
  body
    nav.navbar.navbar-expand-md.bg-light
      .container-fluid
        a(href="/").nav-link.navbar-brand Posts
        button.btn.navbar-toggler(data-bs-toggle="collapse" data-bs-target="#navbar-links") 
          span.navbar-toggler-icon 
        .collapse.navbar-collapse#navbar-links
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            if (currentUser)
              li.nav-item
                a(href="/logout").nav-link Log out
              if(currentUser.status === 'guest')
                li.nav-item
                  a(href="/join").nav-link.text-primary Join the club
            else 
              li.nav-item
                a(href="/sign-up").nav-link Sign up
              li.nav-item
                a(href="/login").nav-link Log in
    div.container
      main 
        block content


extends layout 
include mixins/error-log.pug

block content 
  h1.mb-5.mt-3= title
  form(action="/sign-up", method="post")
    div.form-floating.mb-3
      input(
        type="email"
        name='username'
        required 
        placeholder=" "
      )#email-input.form-control
      label(for="email-input").form-label Email

    div.form-floating.mb-3
      input(
        type="password"
        name='password'
        required 
        maxlength=20
        minlength=3
        placeholder=" "
      )#password-input.form-control
      label(for="password-input").form-label Password

    div.form-floating.mb-3
      input(
        type="password"
        name='passwordConfirmation'
        required 
        maxlength=20
        minlength=3
        placeholder=" "
      )#password-confirmation-input.form-control
      label(for="password-confirmation-input").form-label Confirm Password
    
    div.form-floating.mb-3
      input(
        type="text"
        name='firstName'
        required 
        maxlength=50
        placeholder=" "
      )#first-name-input.form-control
      label(for="first-name-input").form-label First name

    div.form-floating.mb-5
      input(
        type="text"
        name='lastName'
        required 
        maxlength=50
        placeholder=" "
      )#last-name-input.form-control
      label(for="last-name-input").form-label Last name

    button.btn.btn-outline-primary Submit

  +error-log(errors)
      
